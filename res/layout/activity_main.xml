<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    >
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="521dp"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <TextView 
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Vehicle Type"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        
        />
  
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textSize="20sp"
        android:layout_marginTop="8sp"
        android:layout_below="@+id/vehicleSpinner"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        
        />

     <Spinner
         android:id="@+id/facilitiesSpinner"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/textView2"
         android:layout_marginTop="8sp"
         android:background="#FFFFFF"
         android:gravity="center_horizontal"
         android:textAlignment="center" />

      <Spinner
          android:id="@+id/vehicleSpinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/textView1"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="8sp"
          android:background="#FFFFFF"
          android:textAlignment="center" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          
          android:layout_below="@+id/facilitiesSpinner"
          android:text="Trips through the Facility."
          android:textAlignment="center"
          android:layout_centerHorizontal="true"
          android:textSize="20sp" 
          android:layout_marginTop="8sp"
          android:textColor="#FFFFFF"
          
          />

      <EditText
          android:id="@+id/numberOfTrips"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textView3"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/textView3"
          android:ems="10"
          android:inputType="number"
          android:layout_marginTop="8sp"
          android:hint="Numbers greater than 0" 
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:textColor="#FFFFFF"
          />
      
	<TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"      
          android:layout_below="@+id/numberOfTrips"
          android:text="Additional Axle"
          android:textAlignment="center"
          android:layout_centerHorizontal="true"
          android:textSize="20sp" 
          android:layout_marginTop="8sp"  
          android:textColor="#FFFFFF"    
          />

	<Spinner
	    android:id="@+id/axleSpinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/textView4"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="8sp"
	    android:background="#FFFFFF"
	    android:textAlignment="center" />

	<Button 
	    android:id="@+id/calcToll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/axleSpinner"
	    android:layout_marginTop="8sp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:text="Calculate Toll"
	    android:textColor="#FFFFFF"
	    />
</RelativeLayout>
</ScrollView>